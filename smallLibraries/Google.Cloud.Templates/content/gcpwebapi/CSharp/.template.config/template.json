{
  "$schema": "http://json.schemastore.org/template",
  "author": "Google Cloud Tools",
  "groupIdentity": "GCP.ASP.NET.WebAPI",
  "identity": "GCP.ASP.NET.WebAPI.CSharp",
  "name": "Google ASP.NET Core WebAPI",
  "shortName": "gcpmvc",
  "description": "ASP.NET Core WebAPI template for Google Cloud",
  "classifications": [
    "GCP",
    "Web",
    "ASP.NET",
    "WebAPI"
  ],
  "defaultName": "MyGoogleCloudWebApiApp",
  "sourceName": "GcpWebApiTemplateProject",
  "preferNameDirectory": true,
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sources": [
    {
      "source": "./",
      "target": "./",
      "exclude": [
        "**/[Bb]in/**",
        "**/[Oo]bj/**",
        ".template.config/**",
        "**/*.filelist",
        "**/*.user",
        "**/*.lock.json",
        "**/.vs/**"
      ],
      "modifiers": [
        {
          "condition": "(!Framework1)",
          "exclude": [
            "Startup.cs"
          ]
        }
      ]
    }
  ],
  "symbols": {
    "framework": {
      "type": "parameter",
      "datatype": "choice",
      "choices": [
        {
          "choice": "netcoreapp1.0",
          "description": ".NET Core 1.0"
        },
        {
          "choice": "netcoreapp1.1",
          "description": ".NET Core 1.1"
        },
        {
          "choice": "netcoreapp2.0",
          "description": ".NET Core 2.0"
        },
        {
          "choice": "netcoreapp2.1",
          "description": ".NET Core 2.1"
        }
      ],
      "defaultValue": "netcoreapp2.1",
      "replaces": "netcoreapp2.1",
      "description": "The target Framework."
    },
    "gcp-project-id": {
      "type": "parameter",
      "datatype": "text",
      "defaultValue": "",
      "description": "The id of the Google Cloud Platform project to send Stackdriver logs to. Only reqired when running outside of GCP.",
      "replaces": "gcp-project-id"
    },
    "createYear": {
      "type": "generated",
      "generator": "now",
      "parameters": {
        "format": "yyyy"
      },
      "replaces": "2017"
    },
    "port": {
      "type": "generated",
      "generator": "port",
      "parameters": {
        "fallback": 5000
      },
      "replaces": "5000"
    },
    "Framework2_1": {
      "type": "computed",
      "datatype": "bool",
      "value": "(framework == \"netcoreapp2.1\")"
    },
    "Framework2_0": {
      "type": "computed",
      "datatype": "bool",
      "value": "(framework == \"netcoreapp2.0\")"
    },
    "Framework2": {
      "type": "computed",
      "datatype": "bool",
      "value": "(Framework2_0 || Framework2_1)"
    },
    "Framework1_1": {
      "type": "computed",
      "datatype": "bool",
      "value": "(framework == \"netcoreapp1.1\")"
    },
    "Framework1_0": {
      "type": "computed",
      "datatype": "bool",
      "value": "(framework == \"netcoreapp1.0\")"
    },
    "Framework1": {
      "type": "computed",
      "datatype": "bool",
      "value": "(Framework1_1 || Framework1_0)"
    }
  }
}